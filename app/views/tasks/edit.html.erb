<div class="container w-50 p-4 mx-auto border bg-white rounded mt-5">
  <%= render "form", task: @task %>

  <div class="d-flex justify-content-between mt-4">
    <%= link_to "Delete", task_path(@task), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <%= link_to "Back", tasks_path, class: "btn btn-secondary" %>
  </div>
</div>
