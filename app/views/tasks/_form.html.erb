<div class="container w-50 p-4 mx-auto border bg-white rounded mt-5">
  <%= form_with model: task, class: "p-4" do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_field :details, class: "form-control" %>
    </div>

    <% if task.id %>
      <div class="form-check mb-3">
        <%= f.check_box :completed, class: "form-check-input" %>
        <%= f.label :completed, "Completed?", class: "form-check-label" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
